			System.out.println("입력 성공");
		}
		
	} catch (SQLException e) {
		e.printStackTrace();
	} finally {
		// 5.
		try {
			pstm.close();
			con.close();
		} catch (SQLException e) {
			e.printStackTrace();
		}
	}Connection con = null;
	
	try {
		con = DriverManager.getConnection(url, user, password);
	} catch (SQLException e) {
		e.printStackTrace();
	}
	
	// 3.
